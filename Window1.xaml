<Window x:Class="WpfAppIpRange.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppIpRange"
        mc:Ignorable="d"
        Title="Выберите город из списка" Height="574" Width="467" ResizeMode="NoResize">
    <Grid>
        <Label Content="Выберите город" Margin="46,10,46,0" FontSize="20" Height="37" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" Margin="0,52,0,521"/>
        <ListBox Name="LB_CITY" Margin="0,52,0,0" FontSize="20"  BorderBrush="{x:Null}" IsSynchronizedWithCurrentItem="False" PreviewMouseUp="LB_CITY_PreviewMouseUp" >
            <ComboBoxItem Background="#00000000" Content="Москва" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Height="65" />
            <ComboBoxItem Content="Москва2" BorderBrush="#FFB4B4B4" Height="65"/>
            <ComboBoxItem Content="Москва3" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Height="65"/>
        </ListBox>

    </Grid>
</Window>
